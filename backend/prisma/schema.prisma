generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  nome         String
  email        String    @unique
  senha_hash   String
  matricula    String?
  created_at   DateTime  @default(now())
  
  orders       Order[]
  
  @@map("Users")
}

model Product {
  id          String   @id @default(uuid())
  nome        String
  descricao   String
  preco       Float    // ou Decimal se usar PostgreSQL
  imagem      String?
  disponivel  Boolean  @default(true)
  
  orderItems  OrderItem[]
  
  @@map("Products")
}

model Order {
  id          String    @id @default(uuid())
  user_id     String
  data_pedido DateTime  @default(now())
  total       Float     // ou Decimal se usar PostgreSQL
  status      String
  
  user        User      @relation(fields: [user_id], references: [id])
  orderItems  OrderItem[]
  
  @@map("Orders")
}

model OrderItem {
  id             String  @id @default(uuid())
  order_id       String
  product_id     String
  quantidade     Int
  preco_unitario Float   // ou Decimal se usar PostgreSQL
  
  order          Order   @relation(fields: [order_id], references: [id])
  product        Product @relation(fields: [product_id], references: [id])
  
  @@map("OrderItems")
}